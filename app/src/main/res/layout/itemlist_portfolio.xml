<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/customborder">

    <TextView
        android:id="@+id/tickerLTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ticker_portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-black"
        android:padding="5dp"
        android:text="Company Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tickerchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="sans-serif-black"
        android:padding="5dp"
        android:text="Change"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tickerLTP"
        app:layout_constraintTop_toBottomOf="@+id/tickerLTP" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:text="NET QTY"
        android:textColor="#B8B5B5"
        app:layout_constraintStart_toStartOf="@+id/ticker_portfolio"
        app:layout_constraintTop_toBottomOf="@+id/ticker_portfolio" />

    <TextView
        android:id="@+id/tickerQTY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:padding="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:padding="5dp"
        android:text="LTP"
        android:textColor="#B8B5B5"
        app:layout_constraintBottom_toBottomOf="@+id/tickerLTP"
        app:layout_constraintEnd_toStartOf="@+id/tickerLTP"
        app:layout_constraintTop_toTopOf="@+id/tickerLTP" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:padding="5dp"
        android:text="P&amp;L"
        android:textColor="#B8B5B5"
        app:layout_constraintBottom_toBottomOf="@+id/tickerchange"
        app:layout_constraintEnd_toStartOf="@+id/tickerchange"
        app:layout_constraintTop_toTopOf="@+id/tickerchange" />

</androidx.constraintlayout.widget.ConstraintLayout>